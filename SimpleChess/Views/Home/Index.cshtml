@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">



    <table border="1">
        @for (int i = 1; i <= 8; i++)
        {
            var tr_style = i % 2 == 0 ? 0 : 1;
            <tr>
                @for (int y = 1; y <= 8; y++)
                {
                    var td_style = ((y + i) % 2 == 0) ? "w" : "b";
                    <td class="@td_style"></td>
                }
            </tr>
        }
    </table>
</div>